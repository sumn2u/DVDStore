<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.0" xmlns="http://java.sun.com/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_3_0.xsd">
    <servlet>
        <servlet-name>DVD</servlet-name>
        <servlet-class>cart.DVD</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ShoppingCart</servlet-name>
        <servlet-class>cart.ShoppingCart</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ProductDataBean</servlet-name>
        <servlet-class>cart.ProductDataBean</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>AddToShoppingCartServlet</servlet-name>
        <servlet-class>cart.AddToShoppingCartServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>CheckoutServlet</servlet-name>
        <servlet-class>cart.CheckoutServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>RemoveItemServlet</servlet-name>
        <servlet-class>cart.RemoveItemServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>loginCheck</servlet-name>
        <servlet-class>com.admin.loginCheck</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>formError</servlet-name>
        <servlet-class>com.admin.formError</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>DVD</servlet-name>
        <url-pattern>/DVD</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ShoppingCart</servlet-name>
        <url-pattern>/ShoppingCart</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ProductDataBean</servlet-name>
        <url-pattern>/ProductDataBean</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>AddToShoppingCartServlet</servlet-name>
        <url-pattern>/AddToShoppingCartServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>CheckoutServlet</servlet-name>
        <url-pattern>/CheckoutServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>RemoveItemServlet</servlet-name>
        <url-pattern>/RemoveItemServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>loginCheck</servlet-name>
        <url-pattern>/loginCheck</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>formError</servlet-name>
        <url-pattern>/formError</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
</web-app>
